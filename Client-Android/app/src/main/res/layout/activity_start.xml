<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context="com.jeongwook.test.StartActivity">

    <Button
        android:text="forward"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/forward"
        android:textSize="15sp"
        android:layout_above="@+id/home"
        android:layout_toRightOf="@+id/left"
        android:layout_toEndOf="@+id/left" />

    <Button
        android:text="Down"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/CameraDown"
        android:textSize="15sp"
        android:layout_below="@+id/CameraHome"
        android:layout_alignLeft="@+id/CameraHome"
        android:layout_alignStart="@+id/CameraHome" />

    <Button
        android:text="x-"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/CameraLeft"
        android:textSize="15sp"
        android:layout_alignTop="@+id/CameraHome"
        android:layout_toLeftOf="@+id/CameraHome"
        android:layout_toStartOf="@+id/CameraHome" />

    <Button
        android:text="backward"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/backward"
        android:textSize="15sp"
        android:layout_below="@+id/home"
        android:layout_toRightOf="@+id/left"
        android:layout_toEndOf="@+id/left" />

    <Button
        android:text="Reset"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/CameraHome"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/CameraRight"
        android:layout_toStartOf="@+id/CameraRight" />

    <Button
        android:text="x+"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/CameraRight"
        android:textSize="15sp"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:layout_above="@+id/CameraDown" />

    <Button
        android:text="left"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/left"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/backward" />

    <Button
        android:text="right"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/right"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/forward"
        android:layout_toEndOf="@+id/forward"
        android:layout_above="@+id/backward" />

    <Button
        android:text="Up"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/CameraUp"
        android:textSize="15sp"
        android:layout_above="@+id/CameraRight"
        android:layout_toRightOf="@+id/CameraLeft"
        android:layout_toEndOf="@+id/CameraLeft" />

    <Button
        android:text="home"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/home"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/left"
        android:layout_toEndOf="@+id/left"
        android:layout_alignBottom="@+id/CameraLeft" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="100"
        android:progress="50"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <TextView
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/background_dark"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/seekBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Auto"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/auto" />

    <Button
        android:text="Manual"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/forward"
        android:layout_alignStart="@+id/forward"
        android:id="@+id/manual" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timesleep"
        android:max="20"
        android:progress="10"
        android:layout_alignBottom="@+id/manual"
        android:layout_toRightOf="@+id/manual"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:text="Auto Frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="@android:color/background_dark"
        android:layout_above="@+id/timesleep"
        android:layout_toRightOf="@+id/manual"
        android:layout_toEndOf="@+id/manual" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LeftPWM"
        android:id="@+id/HomePWM"
        android:max="10"
        android:progress="5"
        android:layout_alignRight="@+id/LeftPWM"
        android:layout_alignEnd="@+id/LeftPWM"
        android:layout_toRightOf="@+id/homePWM"
        android:layout_toEndOf="@+id/homePWM" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LeftPWM"
        android:max="20"
        android:progress="15"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/CameraRight"
        android:layout_alignEnd="@+id/CameraRight"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_toEndOf="@+id/homePWM"
        android:layout_toRightOf="@+id/homePWM" />

    <Button
        android:text="Exit"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/Exit"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/HomePWM"
        android:layout_toEndOf="@+id/HomePWM" />

    <TextView
        android:text="leftPWM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/CameraUp"
        android:layout_alignStart="@+id/CameraUp" />

    <TextView
        android:text="homePWM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LeftPWM"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/homePWM"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="rightPWM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homePWM"
        android:layout_alignLeft="@+id/homePWM"
        android:layout_alignStart="@+id/homePWM"
        android:id="@+id/rightPWM"
        android:textColor="@android:color/background_dark" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RightPWM"
        android:max="20"
        android:progress="5"
        android:layout_below="@+id/HomePWM"
        android:layout_toLeftOf="@+id/Exit"
        android:layout_alignLeft="@+id/HomePWM"
        android:layout_alignStart="@+id/HomePWM" />

</RelativeLayout>
